<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout android:padding="5dp" android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt1" android:layout_weight="0.45"
            android:layout_width="match_parent" android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="TextView" />

        <TextView android:textColor="@color/black"
            android:id="@+id/txt2" android:layout_weight="0.35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:text="TextView" />

        <TextView android:textColor="@color/black"
            android:id="@+id/txt3" android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>